<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/orderHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Mesa 12"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader"
        app:layout_constraintBottom_toTopOf="@+id/orderSummary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/orderSummary"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/orderFooter"
        android:layout_height="36dp"
        android:background="@color/gray_1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="@string/order_summary_subtotal"
            android:gravity="center"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="$1,124,444.00"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical|end"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/orderFooter"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/order_btn_cancel"
            android:backgroundTint="@color/warning"
            android:layout_weight="1"
            app:cornerRadius="0dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/order_btn_confirm"
            android:backgroundTint="@color/success"
            android:layout_weight="1"
            app:cornerRadius="0dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>

